<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
<addon id="plugin.video.ShortyLiveTV"
       name="ShortyLiveTV"
       version="6.6.7"
       provider-name="Shorty">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
    <import addon="script.module.requests"/>
  </requires>
  <extension point="xbmc.python.pluginsource"
            library="default.py">
        <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Canales y Movies Ingles/Latino/Sub</summary>
    <language>en</language>
    <description lang="en">Canales y Movies Ingles/Latino/Sub</description>
     <platform>all</platform>
  </extension>
</addon>

<addon id="repository.Shorty-Legacy" name="Shorty legacy official Repo" version="1.0.0" provider-name="Shorty">
	<extension point="xbmc.addon.repository" name="Shorty legacy official Repo">
		<info compressed="false">https://raw.github.com/xxspokiixx/testkod/master/addons.xml</info>
		<checksum>https://raw.github.com/xxspokiixx/testkod/master/addons.xml.md5</checksum>
		<datadir zip="true">https://raw.github.com/xxspokiixx/testkod/master</datadir>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary>Shorty-Legacy official Repo</summary>
   		<description lang="en">Instala los Addons mas chidoliros .</description>
		<disclaimer></disclaimer>
