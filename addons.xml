<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
<addon id="plugin.video.ShortyLiveTV"
       name="ShortyLiveTV"
       version="6.6.9"
       provider-name="Shorty">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
    <import addon="script.module.requests"/>
  </requires>
  <extension point="xbmc.python.pluginsource"
            library="default.py">
        <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Canales y Movies Ingles/Latino/Sub</summary>
    <language>en</language>
    <description lang="en">Canales y Movies Ingles/Latino/Sub \n**Empezando a agregar series**</description>
     <platform>all</platform>
  </extension>
</addon>

